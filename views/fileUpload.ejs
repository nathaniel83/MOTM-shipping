<% include ./header %>



<div class="login-page">
 
  
    <div class="form">
       
        <h5>Submit Tracking Data</h5>
        <h6>Submitting as </h6>
      <form action="/fileUpload" method="post" class="login-form" encType="multipart/form-data">
        <h9>Choose File Below</h9>
        <div class="input-field col s12">
            <h9>Uploader: <%= user %> </h9>
                <input name="theuser" value="<%= user %>" type="hidden">
                <input name="thetoken" value="<%= token %>" type="hidden">

           <input id="filename" type="hidden" name="filename" value="currentval">
           <p>.csv files only</p>
            <input type="file"
             id="file" name="thefile"
             accept=".csv" />
          </div>
          
        <button type="submit">Submit</button>
       
      </form>
    </div>
  </div>

  <script>
  document.getElementById('file').onchange = function () {
  
  var val = this.value;
  document.getElementById('filename').setAttribute("value",val);
  
};
  </script>


