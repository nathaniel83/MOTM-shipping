
<% include ./header %>

<div class="login-page">
  
        <div class="form">
            <% if(body) { %>
              <h4>Shipment Status:</h4>
              <% if(body["Items"][0]["Events"][0]["City"]==null){ %>
                <p>Shipment is between the plant and the shipper. Check back in 12-24 hours for updated shipping status.
                </p>
                <h5> The shipper left the below message:</h5>
                <% } %>
              <p> <%= body["Items"][0]["Events"][0]["StatusDescription"] %> </p>
              <% if(body["Items"][0]["Events"][0]["City"]!=null){ %>
                    <h5><strong>Package Location:</strong></h5>
                    <p><%= body["Items"][0]["Events"][0]["City"] %>, <%= body["Items"][0]["Events"][0]["State"] %>,<%= body["Items"][0]["Events"][0]["Zip"] %>, <%= body["Items"][0]["Events"][0]["Country"] %></p>
                    
                    <h5><strong>Arrived at Above Package Location on:</strong></h5>
                    <p id="date">-</p>
                    <script>
                        var date = Date("'"+ <%- body["Items"][0]["Events"][0]["Date"] %> + "'")
                        var word = document.getElementById("date");
                        word.innerHTML = date
                      </script>
                      <% if(body["Items"][0]["ExpectedDelivery"]!=null){ %>
                      <h5>Expected Delivery:</h5>
                      <p><%= body["Items"][0]["ExpectedDelivery"] %></p>
                      <% } %>
              <% } %>
              <% } %>

            
            <h5>Enter Tracking ID Below</h5>
                <% if(msg){ %>
                  <p class="badmsg"><%= msg %></p>
                  <% } %>
          <form action="/getStatus" method="post" class="login-form">
            <input type="text" name="trackingid" placeholder="tracking ID"/>
            <button type="submit">Get Shipping Status</button>
      
          </form>
        
        </div>
      </div>

      <% include ./footer %>