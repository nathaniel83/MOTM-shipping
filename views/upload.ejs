<% include ./header %>
<% if (token) { %>
  <h2>I have a token!</h2>
  <script>
     var token = <%- "'"+JSON.stringify(token)+"'" %>;
     
     localStorage.setItem("token",token);           
  </script>
<% } %>

<% if(msg) { %>
  <h2> <%= msg %> </h2>
  <% } %>
<div class="login-page">
  
    <div class="form">
        <h5>Submit Order Batch Files</h5>
     
      <form action="/upload" method="post" class="login-form" encType="multipart/form-data">
        <h9>Choose File Below</h9>
        <div class="input-field col s12">
          
            <input type="file"
             id="file" name="thefile"
             accept=".csv" />
          </div>
        <button type="submit">Submit</button>
        <p class="message">Add an uploader? <a href="#">Create an account</a></p>
      </form>
    </div>
  </div>


