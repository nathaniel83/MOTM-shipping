<% include ./header %>
<% if (token && user) { %>
  
  <script>
     var token = <%- "'"+JSON.stringify(token)+"'" %>;
     var theUser = <%- "'"+JSON.stringify(user)+"'" %> 
     localStorage.setItem("token",token); 
     localStorage.setItem("user",theUser);           
  </script>
<% } %>


<div class="login-page">
  
    <div class="form">
        <% if(msg) { %>
          <p class="msgcolor"> <%= msg %> </p>
          <% } %>
        <h5>Submit Order Batch Files</h5>
        <h6>Submitting as <%= user %></h6>
      <form action="/upload" method="post" class="login-form" encType="multipart/form-data">
        <h9>Choose File Below</h9>
        <div class="input-field col s12">
           <input name="theuser" value="<%= user %>" type="hidden">
           <input name="thetoken" value="<%= token %>" type="hidden">
           <input id="filename" type="hidden" name="filename" value="currentval">
           <p>.csv files only</p>
            <input type="file"
             id="file" name="thefile"
             accept=".csv" />
          </div>
          
        <button type="submit">Submit</button>
        <% if(user=="momadmin"){ %>
          <p class="message">Add an uploader? <a href="/register">Create an account</a></p>
       <% }else{ %>
          <p class="message">Want to track shipping? <a href="/customer">Tracking Page</a></p>

       <% } %>
      </form>
    </div>
  </div>

  <script>
  document.getElementById('file').onchange = function () {
  
  var val = this.value;
  document.getElementById('filename').setAttribute("value",val);
  
};
  </script>


